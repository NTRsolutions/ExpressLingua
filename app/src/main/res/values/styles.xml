<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorHeaderPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="background">@color/colorHeaderPrimary</item>
        <item name="elevation">0dp</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme.NoActionBar">
        <item name="android:textColorPrimary">@color/colorHeaderPrimary</item>
        <item name="android:textColorSecondary">@color/colorFooterPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="customProgress" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_gradient</item>
        <item name="android:duration">1000</item>
        <item name="android:animationCache">true</item>
        <item name="android:drawingCacheQuality">low</item>
        <item name="android:persistentDrawingCache">animation</item>
    </style>

    <style name="customProgressHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/shape_progress_bar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/white_gray</item>
        <item name="colorControlActivated">@color/white_gray</item>
        <item name="colorControlHighlight">@color/colorHeaderPrimary</item>
    </style>

    <style name="EditTextSecondStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorFooterPrimary</item>
        <item name="colorControlActivated">@color/colorFooterPrimary</item>
        <item name="colorControlHighlight">@color/colorFooterPrimary</item>
        <item name="android:textColorSecondary">@color/colorFooterPrimary</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white_gray</item>
        <item name="colorControlActivated">@color/colorHeaderPrimary</item>
    </style>

    <style name="AppTheme.Hyperlink">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/hyperlink_underline</item>
    </style>

    <style name="AppTheme.HyperlinkSplash">
        <item name="android:textColor">@color/gray_solid</item>
        <item name="android:background">@drawable/hyperlink_underline</item>
    </style>

</resources>
