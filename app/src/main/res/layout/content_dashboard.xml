<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--android:id="@+id/content_dashboard"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:layout_marginEnd="10dp"--><!--android:layout_marginStart="10dp"--><!--android:layout_marginTop="10dp"--><!--android:background="@drawable/shape_bg_app"--><!--android:orientation="vertical"--><!--android:padding="10dp"--><!--app:cardBackgroundColor="@color/white"--><!--app:cardCornerRadius="16dp"--><!--app:cardElevation="8dp"--><!--app:contentPadding="16dp">-->

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_word_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="16dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:text="W "
            android:textColor="#194274"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/indikator_red"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_weight="1"
            android:background="@drawable/shape_indikator_red"
            android:gravity="center"
            android:padding="4dp"
            android:text="590"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/indikator_orange"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_indikator_orange"
            android:gravity="center"
            android:padding="4dp"
            android:text="180"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/indikator_yellow"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_indikator_yellow"
            android:gravity="center"
            android:padding="4dp"
            android:text="215"
            android:textColor="@color/color_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/indikator_green"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_indikator_green"
            android:gravity="center"
            android:padding="4dp"
            android:text="1420"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/indikator_blue"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_weight="1"
            android:background="@drawable/shape_indikator_blue"
            android:gravity="center"
            android:padding="4dp"
            android:text="500"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_sentence_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_word_indicator">

        <TextView
            android:layout_width="16dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:text="S "
            android:textColor="#194274"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sentence_indikator_red"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_weight="1"
            android:background="@drawable/shape_indikator_red"
            android:gravity="center"
            android:padding="4dp"
            android:text="590"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sentence_indikator_orange"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_indikator_orange"
            android:gravity="center"
            android:padding="4dp"
            android:text="180"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sentence_indikator_yellow"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_indikator_yellow"
            android:gravity="center"
            android:padding="4dp"
            android:text="215"
            android:textColor="@color/color_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sentence_indikator_green"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_indikator_green"
            android:gravity="center"
            android:padding="4dp"
            android:text="1420"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sentence_indikator_blue"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_indicator_height"
            android:layout_weight="1"
            android:background="@drawable/shape_indikator_blue"
            android:gravity="center"
            android:padding="4dp"
            android:text="120"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/white_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_sentence_indicator" />

    <TextView
        android:id="@+id/text_challenge_header"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Challenges Progress"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <include
        layout="@layout/content_challenge_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_challenge_header" />

</android.support.constraint.ConstraintLayout>

    <!--</android.support.v7.widget.CardView>-->