<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    tools:context="com.neosolusi.expresslingua.features.tutorial.TutorialActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="48dp"
        android:background="@color/white_gray" />

    <Button
        android:id="@+id/button_skip"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="bottom|start"
        android:maxHeight="48dp"
        android:minHeight="48dp"
        android:text="Skip"
        android:textColor="@color/colorFooterPrimary" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|center"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_dot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

        <ImageView
            android:id="@+id/img_dot_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@null"
            android:src="@drawable/shape_dot_small" />

    </LinearLayout>

    <Button
        android:id="@+id/button_next"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="end|bottom"
        android:maxHeight="48dp"
        android:minHeight="48dp"
        android:text="Next"
        android:textColor="@color/colorFooterPrimary" />

</android.support.design.widget.CoordinatorLayout>
